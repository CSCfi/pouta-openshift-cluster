apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: "{{ name }}"
{% if annotations is defined %}
  annotations:
{% for key, value in annotations.iteritems() %}
    {{ key }}: {{ value }}
{% endfor %}
{% endif %}
spec:
  accessModes: {{ access_modes|default(['ReadWriteOnce']) }}
  storageClassName: {{ storage_class|default('') }}
  resources:
    requests:
      storage: "{{ size }}"
